<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.UpdateData.UpdateDataActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_Id" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:hint="id"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_Nama" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_Id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:hint="nama"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Update" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_Nama" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>